#:kivy 2.3.0

<MyRoot>:

    random_label: random_label
    random_quote: random_quote
    quote_text: quote_text
    quote_author: quote_author
    min_val: min_val
    max_val: max_val

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "MotiPrompt"
            font_size: 60
            color: 0.92, 0.45, 0, 1
        GridLayout:
            cols: 1
            id: random_quote
            Label:
                id: quote_text
                text: "-"
                text_size: self.width, None
                height: self.texture_size[1] + 10
                font_size: 32
                color: 0.92, 0.45, 0, 1
                halign: 'center'
                valign: 'middle'
            Label:
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
                id: quote_author
                text: "-"
                font_size: 20
        Label:
            id: min_val
            text: "-"
            font_size: 10
        Label:
            id: max_val
            text: "-"
            font_size: 10
        Label:
            id: random_label
            text: "-"
            font_size: 24
        GridLayout:
            cols: 3
            MDRoundFlatIconButton:
                text: "Generate quote"
                size_hint: 0.3, None
                font_size: 20
                bold: True
                italic: True
                height: 10
                background_color: (0.5, 0.7, 0.5, 0.9)
                border: 30,30,30,30
                color: (1, .3, .8, .5)
                on_press: root.get_quote()
            MDRoundFlatIconButton:
                text: "Add quote"
                size_hint: 0.3, None
                font_size: 20
                icon: 'plus'
                on_press: root.add_quote()
            MDRoundFlatIconButton:
                text: "Show quotes"
                size_hint: 0.3, None
                font_size: 20
                on_press: root.show_quotes()
        MDFillRoundFlatButton:
            text: "Generate number"
            font_size: 20
            size: 100, 50
            size_hint: 0.8, 0.3
            color: 0, 0, 0, 1
            on_press: root.generate_number()
        MDFlatButton:
            text: "Configure"
            font_size: 20
            size: 100, 50
            style: "elevated"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: app.open_settings()

<AddQuote>:

    new_quote_text: new_quote_text
    new_quote_author: new_quote_author

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Add Quote"
            font_size: 60
            color: 0.92, 0.45, 0, 1
        MDRoundFlatIconButton:
            id: button
            text: "Quote Set"
            icon: "menu"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.dropdown1.open()
        MDTextField:
            id: new_quote_text
            text: "New quote text"
            helper_text: "New quote text"
            multiline: False
        MDTextField:
            id: new_quote_author
            text: "New quote author"
            helper_text: "New quote author"
            multiline: False
        GridLayout:
            cols: 2
            MDRoundFlatIconButton:
                text: "Go Back"
                icon: "arrow-left"
                font_size: 20
                size_hint: 0.5, None
                on_press: root.go_to_main()
            MDRoundFlatIconButton:
                text: "Save"
                font_size: 20
                size_hint: 0.5, None
                on_press: root.save_quote()
