#:kivy 2.3.0

<MyRoot>:

    random_quote: random_quote
    quote_text: quote_text
    quote_author: quote_author

    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            padding: '20dp', 0
            Image:
                source: 'assets/icon.png'
                size_hint_y: 1
                size_hint_x: 0.2
                height: self.parent.height
            Label:
                text: "MotiPrompt"
                font_size: 72
                color: 0.92, 0.45, 0, 1
                size_hint_y: 1
        GridLayout:
            cols: 1
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            id: random_quote
            Label:
                id: quote_text
                text: "-"
                text_size: self.width, None
                height: self.texture_size[1] + 10
                font_size: 32
                color: 0.92, 0.45, 0, 1
                halign: 'center'
                valign: 'middle'
            Label:
                id: quote_author
                text: "-"
                font_size: 20
        GridLayout:
            cols: 2
            valign: "center"
            MDButton:
                size: root.width * 0.5, self.height
                font_size: 20
                on_press: root.get_quote()
                MDButtonIcon:
                    icon: "refresh"
                MDButtonText:
                    text: "Generate quote"
            MDButton:
                id: button
                style: "elevated"
                size: root.width * 0.5, self.height
                text_size: root.size
                on_release: root.dropdown_menu.open()
                MDButtonIcon:
                    icon: "menu"
                MDButtonText:
                    text: root.current_set
            MDButton:
                size: root.width * 0.5, self.height
                font_size: 20
                on_press: root.notify_quote()
                MDButtonIcon:
                    icon: "refresh"
                MDButtonText:
                    text: "Notify"
        GridLayout:
            cols: 3
            canvas.before:
                Color:
                    rgba: 0, 0, 0.5, 0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [1]
            Label:
                text: "Go to:"
                font_size: 20
            Widget:
            Widget:
            MDButton:
                size: root.width * 0.3, self.height
                size_hint: (0.5, 0.2)
                font_size: 20
                on_press: root.add_quote()
                MDButtonIcon:
                    icon: 'plus'
                MDButtonText:
                    text: "Add quote"
            MDButton:
                size: root.width * 0.3, self.height
                font_size: 20
                on_press: root.show_quotes()
                MDButtonIcon:
                    icon: "eye"
                MDButtonText:
                    text: "Show quotes"
            MDButton:
                size: root.width * 0.3, self.height
                font_size: 20
                on_press: root.settings()
                MDButtonIcon:
                    icon: "cog-outline"
                MDButtonText:
                    text: "Settings"
            Widget:
                size: root.width * 0.3, self.height
            MDButton:
                size: root.width * 0.3, self.height
                font_size: 20
                on_press: root.exit_app()
                MDButtonIcon:
                    icon: "exit-to-app"
                MDButtonText:
                    text: "Exit"
            Widget:
                size: root.width * 0.3, self.height

<AddQuote>:

    current_set: self.current_set
    new_quote_text: new_quote_text
    new_quote_author: new_quote_author

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Add Quote"
            font_size: 60
            color: 0.92, 0.45, 0, 1
        MDButton:
            id: button
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.dropdown_menu.open()
            MDButtonIcon:
                icon: "menu"
            MDButtonText:
                text: root.current_set
        MDTextField:
            id: new_quote_text
            text: "New quote text"
            helper_text: "New quote text"
            multiline: False
        MDTextField:
            id: new_quote_author
            text: "New quote author"
            helper_text: "New quote author"
            multiline: False
        GridLayout:
            cols: 2
            MDButton:
                font_size: 20
                size_hint: 0.5, None
                on_press: root.go_to_main()
                MDButtonIcon:
                    icon: "arrow-left"
                MDButtonText:
                    text: "Go Back"
            MDButton:
                font_size: 20
                size_hint: 0.5, None
                on_press: root.save_quote()
                MDButtonText:
                    text: "Save"

<SettingsScreen>:
    name: 'settings'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Notification Settings'
        Label:
            text: 'Notification Title'
        TextInput:
            id: notification_title
            text: 'Default Title'
        Label:
            text: 'Notification Message'
        TextInput:
            id: notification_message
            text: 'Default Message'
        GridLayout:
            cols: 3
            Widget:
            MDButton:
                font_size: 20
                size: root.width * 0.3, self.height
                size_hint: 0.5, None
                on_press: root.save_settings()
                MDButtonText:
                    text: "Save"
            Widget:
            Widget:
            MDButton:
                font_size: 20
                size: root.width * 0.3, self.height
                size_hint: 0.5, None
                on_press: root.go_to_main()
                MDButtonIcon:
                    icon: "arrow-left"
                MDButtonText:
                    text: "Go Back"
            Widget:
