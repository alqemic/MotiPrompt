#:kivy 2.3.0

<MyRoot>:

    random_label: random_label
    random_quote: random_quote
    quote_text: quote_text
    quote_author: quote_author
    min_val: min_val
    max_val: max_val

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "MotiPrompt"
            font_size: 64
            color: 0.92, 0.45, 0, 1
        GridLayout:
            cols: 1
            id: random_quote
            Label:
                id: quote_text
                text: "-"
                font_size: 32
                color: 0.92, 0.45, 0, 1
            Label:
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
                id: quote_author
                text: "-"
                font_size: 20
        Label:
            id: min_val
            text: "-"
            font_size: 10
        Label:
            id: max_val
            text: "-"
            font_size: 10
        Label:
            id: random_label
            text: "-"
            font_size: 24
        Button:
            text: "Generate quote"
            font_size: 32
            size: 100, 50
            on_press: root.get_quote()
        Button:
            text: "Generate number"
            font_size: 32
            size: 100, 50
            on_press: root.generate_number()
        Button:
            text: "Configure"
            font_size: 32
            size: 100, 50
            on_release: app.open_settings()
        Button:
            text: "Add quote"
            font_size: 32
            size: 100, 50
            on_press: root.add_quote()
        Button:
            text: "Show quotes"
            font_size: 32
            size: 100, 50
            on_press: root.show_quotes()

<AddQuote>:

    new_quote_text: new_quote_text
    new_quote_author: new_quote_author

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Add Quote"
            font_size: 64
            color: 0.92, 0.45, 0, 1
        TextInput:
            id: new_quote_text
            text: "New quote text"
            multiline: False
        TextInput:
            id: new_quote_author
            text: "New quote author"
            multiline: False
        GridLayout:
            cols: 2
            Button:
                text: "Go Back"
                font_size: 32
                size: 100, 50
                on_press: root.go_to_main()
            Button:
                text: "Save"
                font_size: 32
                size: 100, 50
                on_press: root.save_quote()
