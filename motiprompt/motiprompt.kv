#:kivy 2.3.0

<MyRoot>:

    random_quote: random_quote
    quote_text: quote_text
    quote_author: quote_author

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "MotiPrompt"
            font_size: 60
            color: 0.92, 0.45, 0, 1
        GridLayout:
            cols: 1
            id: random_quote
            Label:
                id: quote_text
                text: "-"
                text_size: self.width, None
                height: self.texture_size[1] + 10
                font_size: 32
                color: 0.92, 0.45, 0, 1
                halign: 'center'
                valign: 'middle'
            Label:
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
                id: quote_author
                text: "-"
                font_size: 20
        GridLayout:
            cols: 3
            MDButton:
                size_hint: 0.3, None
                font_size: 20
                on_press: root.get_quote()
                MDButtonIcon:
                    icon: "refresh"
                MDButtonText:
                    text: "Generate quote"
            MDButton:
                size_hint: 0.3, None
                font_size: 20
                on_press: root.add_quote()
                MDButtonIcon:
                    icon: 'plus'
                MDButtonText:
                    text: "Add quote"
            MDButton:
                size_hint: 0.3, None
                font_size: 20
                on_press: root.show_quotes()
                MDButtonIcon:
                    icon: "eye"
                MDButtonText:
                    text: "Show quotes"

<AddQuote>:

    new_quote_text: new_quote_text
    new_quote_author: new_quote_author

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Add Quote"
            font_size: 60
            color: 0.92, 0.45, 0, 1
        MDButton:
            id: button
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.dropdown1.open()
            MDButtonIcon:
                icon: "menu"
            MDButtonText:
                text: "Quote Set"
        MDTextField:
            id: new_quote_text
            text: "New quote text"
            helper_text: "New quote text"
            multiline: False
        MDTextField:
            id: new_quote_author
            text: "New quote author"
            helper_text: "New quote author"
            multiline: False
        GridLayout:
            cols: 2
            MDButton:
                font_size: 20
                size_hint: 0.5, None
                on_press: root.go_to_main()
                MDButtonIcon:
                    icon: "arrow-left"
                MDButtonText:
                    text: "Go Back"
            MDButton:
                font_size: 20
                size_hint: 0.5, None
                on_press: root.save_quote()
                MDButtonText:
                    text: "Save"
