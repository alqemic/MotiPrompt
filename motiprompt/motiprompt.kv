#:kivy 2.3.0

<MyRoot>:

    random_quote: random_quote
    quote_text: quote_text
    quote_author: quote_author

    ScrollView:
        BoxLayout:
            orientation: "vertical"
            GridLayout:
                cols: 2
                Image:
                    source: "assets/icon.png"
                    size_hint_y: 1
                    size_hint_x: 0.2
                    height: self.parent.height
                Label:
                    text: "MotiPrompt"
                    font_size: 72
                    color: 0.92, 0.45, 0, 1
                    size_hint_y: 1
            GridLayout:
                cols: 1
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 0.5
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
                id: random_quote
                Label:
                    id: quote_text
                    text: "-"
                    text_size: self.width, None
                    height: self.texture_size[1] + 10
                    font_size: 32
                    color: 0.92, 0.45, 0, 1
                    halign: "center"
                    valign: "middle"
                Label:
                    id: quote_author
                    text: "-"
                    font_size: 20
            GridLayout:
                cols: 2
                valign: "center"
                MDButton:
                    style: "tonal"
                    size: root.width / 2, root.height * 0.1
                    font_size: 20
                    on_press: root.get_quote()
                    MDButtonIcon:
                        icon: "refresh"
                    MDButtonText:
                        text: "Generate quote"
                MDButton:
                    id: button
                    style: "tonal"
                    size: root.width / 2, root.height * 0.1
                    text_size: root.size
                    on_release: root.dropdown_menu.open()
                    MDButtonIcon:
                        icon: "menu"
                    MDButtonText:
                        text: root.current_set
                MDButton:
                    style: "tonal"
                    size: root.width / 2, root.height * 0.1
                    font_size: 20
                    on_press: root.notify_quote()
                    MDButtonIcon:
                        icon: "refresh"
                    MDButtonText:
                        text: "Notify"
            GridLayout:
                cols: 2
                MDButton:
                    style: "elevated"
                    size: root.width / 2, root.height * 0.15
                    size_hint: (0.5, 0.2)
                    font_size: 20
                    on_press: root.add_quote()
                    MDButtonIcon:
                        icon: "plus"
                    MDButtonText:
                        text: "Add Quote"
                MDButton:
                    style: "elevated"
                    size: root.width / 2, root.height * 0.15
                    font_size: 20
                    on_press: root.delete_quote()
                    MDButtonIcon:
                        icon: "delete"
                    MDButtonText:
                        text: "Delete Quote"
                MDButton:
                    style: "elevated"
                    size: root.width / 2, root.height * 0.15
                    font_size: 20
                    on_press: root.show_quotes()
                    MDButtonIcon:
                        icon: "eye"
                    MDButtonText:
                        text: "Show Quotes"
                MDButton:
                    style: "elevated"
                    size: root.width / 2, root.height * 0.15
                    font_size: 20
                    on_press: app.open_settings()
                    MDButtonIcon:
                        icon: "cog-outline"
                    MDButtonText:
                        text: "Settings"
            GridLayout:
                cols: 3
                Widget:
                    size: root.width / 3, root.height * 0.1
                MDButton:
                    style: "filled"
                    size: root.width / 3, root.height * 0.1
                    font_size: 20
                    on_press: root.exit_app()
                    MDButtonIcon:
                        icon: "exit-to-app"
                    MDButtonText:
                        text: "Exit"
                Widget:
                    size: root.width / 3, root.height * 0.1

<AddQuote>:

    current_set: self.current_set
    new_quote_text: new_quote_text
    new_quote_author: new_quote_author

    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Image:
                source: "assets/icon.png"
                size_hint_y: 1
                size_hint_x: 0.2
                height: self.parent.height
            Label:
                text: "Add Quote"
                font_size: 60
                color: 0.92, 0.45, 0, 1
                size_hint_y: 1
        MDButton:
            id: button
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.dropdown_menu.open()
            MDButtonIcon:
                icon: "menu"
            MDButtonText:
                text: root.current_set
        MDTextField:
            id: new_quote_text
            text: "New quote text"
            helper_text: "New quote text"
            multiline: False
        MDTextField:
            id: new_quote_author
            text: "New quote author"
            helper_text: "New quote author"
            multiline: False
        GridLayout:
            cols: 3
            Widget:
                size: root.width / 3, root.height * 0.15
            MDButton:
                style: "tonal"
                font_size: 20
                size: root.width / 3, root.height * 0.15
                size_hint: 0.5, None
                on_press: root.save_quote()
                MDButtonIcon:
                    icon: "content-save"
                MDButtonText:
                    text: "Save"
            Widget:
                size: root.width / 3, root.height * 0.15
            Widget:
                size: root.width / 3, root.height * 0.1
            MDButton:
                font_size: 20
                size: root.width / 3, root.height * 0.1
                size_hint: 0.5, None
                on_press: root.go_to_main()
                MDButtonIcon:
                    icon: "arrow-left"
                MDButtonText:
                    text: "Go Back"
            Widget:
                size: root.width / 3, root.height * 0.1

<DeleteQuote>:

    current_set: self.current_set
    dquotes: dquotes
    box: box
    # quote_text: quote_text

    BoxLayout:
        id: box
        orientation: "vertical"
        GridLayout:
            cols: 2
            Image:
                source: "assets/icon.png"
                size_hint_y: 1
                size_hint_x: 0.2
                height: self.parent.height
            Label:
                text: "Delete Quote"
                font_size: 60
                color: 0.92, 0.45, 0, 1
                size_hint_y: 1
        ScrollView:
            GridLayout:
                id: dquotes
                cols: 1
        GridLayout:
            cols: 3
            Widget:
                size: root.width / 3, root.height * 0.1
            MDButton:
                font_size: 20
                size: root.width / 3, root.height * 0.1
                size_hint: 0.5, None
                on_press: root.go_to_main()
                MDButtonIcon:
                    icon: "arrow-left"
                MDButtonText:
                    text: "Go Back"
            Widget:
                size: root.width / 3, root.height * 0.1
